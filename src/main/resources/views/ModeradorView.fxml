<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.sisnotificacion.controller.VistaModeradorController"
            prefWidth="360.0" prefHeight="670.0">
    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
          AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
        <padding>
            <Insets top="20" left="15" right="15" bottom="20"/>
        </padding>

        <Label text="Panel del Moderador"
               style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <VBox spacing="5" alignment="TOP_LEFT" prefHeight="350">
            <Label text="Notificaciones y mensajes:"/>
            <ListView fx:id="listaNotificaciones" prefHeight="350"/>
        </VBox>

        <VBox spacing="5" alignment="TOP_LEFT" maxWidth="300">
            <Label text="Correo del administrador a bloquear:"/>
            <TextField fx:id="campoCorreoAdmin" promptText="admin@ejemplo.com"/>
        </VBox>

        <VBox spacing="5" maxWidth="300">
            <Label text="Motivo de bloqueo:"/>
            <TextArea fx:id="campoRazonBloqueo" promptText="Describe el motivo..." prefRowCount="3"/>
        </VBox>

        <Button fx:id="btnBloquearAdmin" text="Bloquear Administrador"
                style="-fx-background-color: #a80000; -fx-text-fill: white;" maxWidth="200"/>

    </VBox>
</AnchorPane>
